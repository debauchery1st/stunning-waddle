#:import Clipboard kivy.core.clipboard.Clipboard
#:set bkg_color (0.0, 0.0, 0.0, .9)
#:set foreground_clr (1.1, 1.1, 1.1, 1)

<ChatInput>

<ChatMessage>:
    markup: 1
    background_color: bkg_color
    foreground_color: foreground_clr
    text_size: (self.width, None)
    halign: 'left'
    valign: 'top'
    size_hint: 1, None
    height: self.texture_size[1]
    on_release: Clipboard.copy(self.plaintext)

<MyServerIP@GridLayout>:
    cols: 2
    size_hint_y: None
    kv_text: server.text
    Label:
        id: lbl_server
        text: 'Server:'
        size_hint: None, None
    TextInput:
        id: server
        text: app.chat_ip
        multiline: False
        size_hint_y: None

<MyServerPort@GridLayout>:
    cols: 2
    size_hint_y: None
    kv_text: port.text
    Label:
        id: lbl_port
        text: 'Port:'
        size_hint: None, None
    TextInput:
        id: port
        text: '64007'
        multiline: False
        size_hint_y: None

<MyNickName@GridLayout>:
    cols: 2
    size_hint_y: None
    kv_text: nickname.text
    Label:
        text: 'Nickname:'
        size_hint: None, None
    TextInput:
        id: nickname
        text: app.nick
        multiline: False
        height: self.height
        size_hint_y: None

ScreenManager:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "data/bkg.png"
    Screen:
        name: 'login'
        BoxLayout:
            orientation: 'vertical'
            spacing: 10
            padding: 10
            MyServerIP:
                id: server_ip
            MyServerPort:
                id: server_port
            MyNickName:
                id: nick_name
            Image:
                source: 'data/icon.png'
            Button:
                text: 'Connect'
                on_press: app.connect()
    Screen:
        name: 'lobby'
        BoxLayout:
            spacing: 10
            padding: 10
            orientation: 'vertical'
            id: chat_window
            Button:
                text: 'Detach'
                size_hint: .24, .1
                on_press: app.disconnect()
            BoxLayout:
                id: local_input
                orientation: 'horizontal'
                size_hint_y: .1
                ChatInput:
                    id: message
                    multiline: False
                    text: "type message here"
                    size_hint_x: .7
                Button:
                    text: 'send'
                    on_press: app.send_msg()
                    focus_next: message
                    size_hint_x: .3
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: 1
                spacing: 10
                padding: 10
                ScrollView:
                    id: chat_view
                    GridLayout:
                        id: chat_logs
                        cols: 1
                        size_hint_y: None
                        height: sum(x.height * 1.25 for x in self.children)
                Label:
                    id: active_users
                    markup: 1
                    halign: 'left'
                    size_hint: None, None
                    text: app.chat_users
